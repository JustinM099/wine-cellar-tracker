<div class='container'>
  <div class='row'>
    {{#if bottles}}
      {{#each bottles as |b|}}
      {{> bottle b}}
      {{/each}}
    {{else}}
      <div class="p-5 mb-4 bg-light rounded-3">
        <div class="container-fluid py-5">
          <h1 class="display-5 fw-bold">No bottles found from your search.</h1>
          <p class="col-md-8 fs-4">Perhaps you'd like to add a new wine to your cellar?</p>
          <a class="btn btn-primary btn-lg" type="button" href='/add'>Add to cellar</a>
          <a class="btn btn-primary btn-lg" type="button" href='/'>View my cellar</a>
        </div>
      </div>
    {{/if}}
  </div>
</div>
<script src='/js/updateBottleCount.js'></script>