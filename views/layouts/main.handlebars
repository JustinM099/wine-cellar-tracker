      </a>

      <div>
        {{#if logged_in}}
          <a class='btn-no-style' href='/add'>Add bottle</a>
          <a id='logout' class='btn-no-style'>Logout</a>
        {{else}}
          <a href='/login'>Login</a>
        {{/if}}
      </div>
    </nav>
    <main class='container pt-4'>
      <!-- Content here -->
      {{{body}}}
    </main>

    <footer>

    </footer>
    <!-- Option 1: Bootstrap Bundle with Popper -->
